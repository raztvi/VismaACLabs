@using Core.Services
@model RegisterUserViewModel
@inject ICompanyData CompanyData

@{
    ViewBag.Title = "Register";
}

<h1>Register</h1>
<form asp-antiforgery="true" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username"/>
        <span asp-validation-for="Username"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" asp-items="@(new SelectList(CompanyData.GetAll(), nameof(Company.Id), nameof(Company.Name)))"></select>
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword"/>
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div>
        <input type="submit" value="Register"/>
    </div>
</form>