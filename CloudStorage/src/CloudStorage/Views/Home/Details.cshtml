@model FileInfo

@{
    ViewBag.Title = Model.FileName;
}

<div class="page-header">
    <h1>@Model.FileName</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Id</h4>
        <p>@Model.Id</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Description</h4>
        <p>@Model.Description</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>File size in bytes</h4>
        <p>@Model.FileSizeInBytes</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Owner</h4>
        <p>@User.Identity.Name</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Read only</h4>
        <p>
            @{
                if (Model.ReadOnly)
                {
                    <strong>yes</strong>
                }
                else
                {
                    <strong>no</strong>
                }
            }
        </p>
    </div>
</div>

<div class="row">
    <a class="col-lg-12" asp-action="@nameof(HomeController.Index)">Home</a>
</div>