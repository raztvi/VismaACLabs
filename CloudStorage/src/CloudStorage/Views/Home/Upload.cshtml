@model UploadViewModel

@{
    ViewBag.Title = "Upload";
}

<div class="page-header text-center">
    <h1>Upload</h1>
</div>
<form method="post" enctype="multipart/form-data" asp-action="Upload" class="form-edit">
    <div class="form-group">
        <label asp-for="UploadedFile" class="control-label"></label>
        <input type="file" asp-for="UploadedFile" name="files" class="form-control" multiple/>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" ></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContentType" class="control-label"></label>
        <select asp-for="ContentType" asp-items="@Html.GetEnumSelectList(typeof(FileContentType))" class="form-control"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="ReadOnly" class="control-label"></label>
        <div>
            Yes <input type="radio" asp-for="ReadOnly" value="true"/>
            <input type="radio" asp-for="ReadOnly" value="false" checked="checked" /> No
        </div>
        
    </div>

    <div class="form-group">
        <label class="control-label"></label>
        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-primary btn-block" />
        </div>
        <div class="col-md-6">
            <a asp-action="@nameof(HomeController.Index)" class="btn btn-default  btn-block">Cancel</a>
        </div>
    </div>
</form>