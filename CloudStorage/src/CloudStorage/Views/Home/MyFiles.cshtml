@model IEnumerable<FileInfo>
@{
    ViewBag.Title = "My files";
}

<div class="page-header">
    <h1>Welcome, here are your uploaded files</h1>
</div>

<div>
    @if (Model != null)
    {
        <table class="table table-striped table-hover" id="my-files">
            <thead>
                <tr>
                    <th>File name</th>
                    <th>ContentType</th>
                    <th>Description</th>
                    <th>File size</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    @if (User.Identity.Name.Equals(file.FileOwner))
                        {
                        <tr>
                        <td>@file.FileName</td>
                        <td>@file.ContentType</td>
                        <td>@file.Description</td>
                        <td>@file.FileSizeInBytes</td>
                         <td><a class="btn btn-primary "  asp-action="Download" asp-route-id="@file.Id" id="download-file-@file.Id">Download</a>
</td>
                        </tr>
                    }
                }
                

                
            </tbody>
        </table>
    }

</div>


<div class="row">
    <a class="col-lg-12" asp-action="@nameof(HomeController.Index)">Home</a>
</div>


