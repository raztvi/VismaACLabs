@model IEnumerable<Company>

<div class="page-header">
    <h1>Companies</h1>
</div>

<form asp-controller="Company" asp-action="Index" method="get">
    <p>
        <div class="form-group">
        Name: <input type="text" name="QueryByName" class="form-control" placeholder="Search after company name. Hit enter to search.">
        <div></div>
        Adress: <input type="text" name="QueryByAddress" class="form-control" placeholder="Search after company address.Hit enter to search.">
        </div>
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
</form>

<div>
    @if (Model != null)
    {
        <table class="table table-striped table-hover" id="companies">
            <thead>
                <tr>
                    <th>Company name</th>
                    <th>Main address</th>
                    <th>Contact email</th>
                    <th>Contact phone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr id="company-row-@company.Id">
                        <td>@company.Name</td>
                        <td>@company.MainAddress</td>
                        <td>@company.ContactEmail</td>
                        <td>@company.ContactPhoneNumber</td>

                        <td>
                            <div class="">
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@company.Id" id="company-details-@company.Id">Details</a>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@company.Id" id="company-edit-@company.Id">Edit</a>
                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    }

</div>
<div>
    <a asp-action="Create" class="btn btn-info btn-lg btn-block" id="create-company">Create</a>
</div>